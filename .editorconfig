root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{*.json,*.jsonc,*.jsonl}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.toml]
indent_size = 2
indent_style = space

[{*.yml,*.yaml}]
indent_size = 2
indent_style = space
